<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:drawableStart="@android:drawable/ic_dialog_dialer"
            android:padding="10dp"
            android:id="@+id/call"
            android:textColor="@color/white"
            android:text="Contact by Call"
            android:background="@color/colorNewPrimary"
           />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mail"
            android:textColor="@color/white"
            android:text="Contact by Mail"
            android:background="@color/colorNewPrimary"/>
    </LinearLayout>

</LinearLayout>