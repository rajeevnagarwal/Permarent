<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f6f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Product Details"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp">

                    <com.furniture.appliances.rentals.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="Rent Amount"
                        android:textColor="#82898d"
                        android:textSize="16sp"
                        app:type="regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="horizontal">


                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/cardtext"
                            android:textSize="18sp"
                            app:type="regular" />

                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:id="@+id/rent_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textColor="#565a5c"
                            android:textSize="18sp"
                            app:type="regular" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <com.furniture.appliances.rentals.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="Security Deposit"
                        android:textColor="#82898d"
                        android:textSize="16sp"
                        app:type="regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="horizontal">


                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/cardtext"
                            android:textSize="18sp"
                            app:type="regular" />


                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:id="@+id/security_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textColor="#565a5c"
                            android:textSize="18sp"
                            app:type="regular" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <com.furniture.appliances.rentals.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="Min Rent Period"
                        android:textColor="#82898d"
                        android:textSize="16sp"
                        app:type="regular" />


                    <com.furniture.appliances.rentals.util.CustomTextView
                        android:id="@+id/min_rent_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="First Name"
                        android:textColor="#565a5c"
                        android:textSize="18sp"
                        app:type="regular" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <com.furniture.appliances.rentals.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="Delivery Charges"
                        android:textColor="#82898d"
                        android:textSize="16sp"
                        app:type="regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="horizontal">


                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/cardtext"
                            android:textSize="18sp"
                            app:type="regular" />

                        <com.furniture.appliances.rentals.util.CustomTextView
                            android:id="@+id/delivery_charges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textColor="#565a5c"
                            android:textSize="18sp"
                            app:type="regular" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />

            </LinearLayout>

            <com.furniture.appliances.rentals.util.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textColor="#565a5c"
                android:textSize="18sp"
                app:type="regular" />

            <RelativeLayout
                android:id="@+id/rl_material"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Material"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_dimensions"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Dimensions"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/dimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_color"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Color"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_type"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Type"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_brand"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Brand"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.furniture.appliances.rentals.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="Other Description"
                    android:textColor="#82898d"
                    android:textSize="16sp"
                    app:type="regular" />


                <com.furniture.appliances.rentals.util.CustomTextView
                    android:id="@+id/other_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#565a5c"
                    android:textSize="18sp"
                    app:type="regular" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#D9D9D9" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>